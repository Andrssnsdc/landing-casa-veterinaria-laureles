<script>
const cards = document.querySelectorAll('.card');

function isInViewport(element) {
  const rect = element.getBoundingClientRect();
  return (
    rect.top >= 0 &&
    rect.left >= 0 &&
    rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
    rect.right <= (window.innerWidth || document.documentElement.clientWidth)
  );
}

function rotateCardOnScroll() {
  cards.forEach(card => {
    if (isInViewport(card) && !card.classList.contains('rotate')) {
      rotateCard(card);
    }
  });
}

window.addEventListener('scroll', rotateCardOnScroll);

function rotateCard(card) {
  card.classList.add('rotate');
  setTimeout(() => {
    card.classList.remove('rotate');
  }, 3000); // Duración de la animación en milisegundos
}


  </script>
  <style >
    
  @keyframes rotate {
  0% {
    transform: rotateY(0deg);
  }
  100% {
    transform: rotateY(360deg);
  }
}

.card.rotate {
  animation: rotate 3s linear forwards;
  transform-style: preserve-3d;
}
  </style>